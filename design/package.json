  "devDependencies": {
    "astro": "0.20.12",
    "html-validate": "6.1.0",
    "prettier": "2.4.1",
    "prettier-plugin-astro": "0.0.9"
  },
  "dependencies": {
    "@snowpack/plugin-postcss": "1.4.3",
    "any-date-parser": "1.5.1",
    "cqfill": "0.6.0",
    "slug": "5.1.0",
    "tailwindcss": "2.2.19"
  },
  "postcss": {
    "plugins": {
      "cqfill/postcss": {}
    }
  }
