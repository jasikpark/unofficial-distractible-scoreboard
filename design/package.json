{
  "name": "design",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    "./theme/": {
      "import": "./src/theme/"
    },
    "./components/": {
      "import": "./src/components/"
    }
  },
  "scripts": {
    "start": "astro dev",
    "forestry:start": "yarn start && yarn preview",
