---
import characters from "@components/characters.module.css";
const getCharacterStyle = (character: string) =>
  characters[character.toLowerCase()];
const { name, class: className = "", block = false } = Astro.props;
---

{block ? <div class={`${getCharacterStyle(name)} ${className}`.trim()}>
    {name}
  </div> : <span class={`${getCharacterStyle(name)} ${className}`.trim()}>
    {name}
  </span>}
