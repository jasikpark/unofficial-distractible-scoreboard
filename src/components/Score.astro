---
import styles from "@components/EpisodeTag.module.css";
import { Score } from "@src/episodes.ts";
import { formatScore } from "@src/utils.ts";

export interface Props {
  score: Score;
}

const {
  score: { character, score },
} = Astro.props as Props;
---

<div class={styles[character.toLowerCase()]}>
  <slot>{`${character} ${formatScore(score)}`}</slot>
</div>
